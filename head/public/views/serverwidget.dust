<div class="span3 widget servers">
	<div class="status">
		2 nodes
		<span class="dot ready"></span>: 2
		<span class="dot running"></span>: 0
		<span class="dot error"></span>: 0
	</div>
	{#nodes}
		<div class="servernode {status}" data-id="{id}">
			{name}<br>
			{ip}
			<span class="info-button">i</span>
			<!-- TODO: use cool unicode -->
			<span class="job-button">#</span>
		</div>
	{:else}
		No Servers
	{/nodes}
<br>
</div>