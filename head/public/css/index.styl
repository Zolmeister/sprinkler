@import 'nib';

main-col = #00A287
main2-col = #104Ba9
second-col = #2DD700
second2-col = #006957

html,body{
	height 100%
}

::-webkit-scrollbar {
    width 10px
    height 10px
}
 
::-webkit-scrollbar-track {
    -webkit-box-shadow inset 0 0 6px rgba(0,255,0,0.3)
    border-radius 5px
}
 
::-webkit-scrollbar-thumb {
    border-radius 5px
    -webkit-box-shadow inset 0 0 6px rgba(0,0,0,0.5)
    background-color lighten(main-col, 10%)
}

input {
	height 16px
	font-size 12px
	border none
	margin-bottom 4px
	border-radius 2px
	line-height normal
}

.container{
	height 90%
}

.outer {
	height 100%
	padding 10px
	margin-top 10px
	background-color main-col
	border-radius 10px
}

.inner{
	height 100%
}

.sidebar,#mainBox,.widget{
	padding 10px
	height 100%
	border-radius  10px
	background-color  darken(main-col, 10%)
    box-shadow 	inset 0 0 6px #444
}

.close {
	position absolute
}

@import 'serverwidget';
@import 'infowidget';
@import 'jobwidget';
@import 'clientwidget';